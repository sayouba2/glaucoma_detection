# Configuration de sécurité pour Glaucoma Detection
# Copiez ce fichier vers .env et modifiez les valeurs

# Clé JWT pour l'authentification
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_KEY_FOR_JWT

# Clé de chiffrement pour les fichiers (images et rapports)
ENCRYPTION_KEY=CHANGE_THIS_TO_A_STRONG_ENCRYPTION_KEY_2024

# Clé API OpenAI (optionnel)
OPENAI_API_KEY=your_openai_api_key_here

# Configuration des logs
LOG_LEVEL=INFO
ENABLE_AUDIT_LOGS=true

# Sécurité additionnelle
MAX_FILE_SIZE_MB=10
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,bmp,tiff
SESSION_TIMEOUT_MINUTES=60